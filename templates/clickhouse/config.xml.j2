<yandex>
    <logger>
        <level>{{clickhouse_log_level}}</level>
        <log>/var/log/app/clickhouse-server/clickhouse-server.log</log>
        <errorlog>/var/log/app/clickhouse-server/clickhouse-server.err.log</errorlog>
        <size>100M</size>
        <count>20</count>
    </logger>
    <http_port>8123</http_port>
    <tcp_port>9000</tcp_port>
    <interserver_http_host>{{ ansible_host}}</interserver_http_host>
    <interserver_http_port>9009</interserver_http_port>
    <listen_host>{{clickhouse_listen_address}}</listen_host>
    <max_connections>4096</max_connections>
    <keep_alive_timeout>3</keep_alive_timeout>
    <max_concurrent_queries>100</max_concurrent_queries>
    <uncompressed_cache_size>8589934592</uncompressed_cache_size>
    <mark_cache_size>5368709120</mark_cache_size>
    <path>/opt/data/clickhouse/clickhouse-server/data/</path>
    <tmp_path>/opt/data/clickhouse/clickhouse-server/data/tmp/</tmp_path>
    <user_files_path>/opt/data/clickhouse/clickhouse-server/data/user_files/</user_files_path>
    <users_config>users.xml</users_config>
    <zookeeper> incl="zookeeper" </zookeeper>
    <default_profile>default</default_profile>
    <default_database>default</default_database>
    <timezone>Europe/Zurich</timezone>
    <mlock_executable>false</mlock_executable>
    <builtin_dictionaries_reload_interval>3600</builtin_dictionaries_reload_interval>
    <max_session_timeout>3600</max_session_timeout>
    <default_session_timeout>60</default_session_timeout>
    <query_log>
        <database>system</database>
        <table>query_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </query_log>
    <query_thread_log>
        <database>system</database>
        <table>query_thread_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </query_thread_log>
    <dictionaries_config>*_dictionary.xml</dictionaries_config>
    <compression>
        <case>
            <min_part_size>10000000000</min_part_size>
            <min_part_size_ratio>0.01</min_part_size_ratio>
            <method>zstd</method>
        </case>
    </compression>
    <distributed_ddl>
        <path>/clickhouse/task_queue/ddl</path>
    </distributed_ddl>
    <format_schema_path>/opt/data/clickhouse/data/format_schemas/</format_schema_path>
    <graphite_rollup> incl="graphite_rollup" </graphite_rollup>
</yandex>